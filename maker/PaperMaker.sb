shY = gh / 5
x = 0
y = 0
width = r
height = r * 2
pw = 0
bc = "AntiqueWhite"
Shapes_AddEllipse()
x = r / 2
width = w
Shapes_AddRectangle()
' shadow
bc = "#11000000"
y = y + r
height = r
Shapes_AddRectangle()
' paper
width = r
height = r * 2
x = w 
y = 0
bc = "AntiqueWhite"
Shapes_AddEllipse()
' core
width = r / 3
height = r * 2 / 3
x = w + (r - width) / 2
y = (r * 2 - height) / 2
bc = "#DDDDDD"
Shapes_AddEllipse()
' shadow
width = r
height = r * 2
x = w 
y = 0
bc = "#22000000"
Shapes_AddEllipse()
' paper
x = 0
y = r
width = w
height = r + 10
bc = "AntiqueWhite"
Shapes_AddRectangle()
y = 2 * r + 10
x1 = 5
y1 = 0
x2 = 0
y2 = 10
x3 = 10
y3 = 10
angle = 180
For x = 0 To w - 10 Step 10
  Shapes_AddTriangle()
EndFor

' caption
bc = "Black"
fn = "Trebuchet MS"
fs = 50
angle = 0
txt = "Paper"
x = gw - 160 - shX
